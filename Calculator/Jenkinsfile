pipeline {
    agent any
    
    environment {
        JAVA_HOME = tool name: 'JDK 23', type: 'Tool'  // Make sure JDK 23 is installed on Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from GitHub repository
                https://github.com/popcorn1297/test_java.git // Update with your actual repository URL
            }
        }

        stage('Compile') {
            steps {
                // Compile the Java application using javac
                script {
                    echo 'Compiling the Java application...'
                    sh "${JAVA_HOME}/bin/javac Calculator.java" // Compile the Calculator.java file
                }
            }
        }

        stage('Run') {
            steps {
                // Run the compiled Java application
                script {
                    echo 'Running the Java application...'
                    sh "${JAVA_HOME}/bin/java Calculator" // Run the Calculator class (no .java or .class extension)
                }
            }
        }
    }

    post {
        always {
            // Clean up or other final steps
            echo 'Pipeline finished.'
        }

        success {
            // Actions for a successful build
            echo 'Build succeeded!'
        }

        failure {
            // Actions for a failed build
            echo 'Build failed.'
        }
    }
}
